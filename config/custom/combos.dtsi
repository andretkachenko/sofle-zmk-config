/ {
    combos {
        compatible = "zmk,combos";

        //  layer toggles
        uni_mode { // space + enter -> uni layer
            timeout-ms = <50>;
            key-positions = <53 56>;
            bindings = <&to UNI>;
            require-prior-idle-ms = <IDLE_MS>;
            slow-release;
        };

        sys_mode { // SYM + NUM -> sys layer
            timeout-ms = <50>;
            key-positions = <54 55>;
            bindings = <&to SYS>;
            require-prior-idle-ms = <IDLE_MS>;
            slow-release;
        };

        // control buttons for small layouts
        cesc { // w + e -> esc
            timeout-ms = <50>;
            key-positions = <14 15>;
            bindings = <&kp ESC>;
            require-prior-idle-ms = <IDLE_MS>;
            slow-release;
        };

        cdel { // o + p -> bspc
            timeout-ms = <50>;
            key-positions = <21 22>;
            bindings = <&kp BSPC>;
            require-prior-idle-ms = <IDLE_MS>;
            slow-release;
        }

        cbspc { // i + o -> del
            timeout-ms = <50>;
            key-positions = <20 21>;
            bindings = <&kp DEL>;
            require-prior-idle-ms = <IDLE_MS>;
            slow-release;
        };

        capp { // , + . -> application (context menu)
            timeout-ms = <50>;
            key-positions = <46 47>;
            bindings = <&kp K_APP>;
            require-prior-idle-ms = <IDLE_MS>;
            slow-release;
        };
    };
};