/ {
    combos {
        compatible = "zmk,combos";

        hub_mode { // f + b -> hub layer
            timeout-ms = <50>;
            key-positions = <28 41>;
            bindings = <&to HUB>;
            require-prior-idle-ms = <IDLE_MS>;
            slow-release;
        };

        mouse_mode { // g + h -> mouse layer
            timeout-ms = <50>;
            key-positions = <29 30>;
            bindings = <&smart_mouse MSE>;
            require-prior-idle-ms = <IDLE_MS>;
            slow-release;        
        };

        cesc { // w + e -> esc
            timeout-ms = <50>;
            key-positions = <14 15>;
            bindings = <&kp ESC>;
            require-prior-idle-ms = <IDLE_MS>;
            slow-release;
        };

        cret { // e + r -> ret
            timeout-ms = <50>;
            key-positions = <15 16>;
            bindings = <&kp RET>;
            require-prior-idle-ms = <IDLE_MS>;
            slow-release;
        };

        cdell { // r + t -> del
            timeout-ms = <50>;
            key-positions = <16 17>;
            bindings = <&kp DEL>;
            require-prior-idle-ms = <IDLE_MS>;
            slow-release;
        };

        cdelr { // i + o -> del
            timeout-ms = <50>;
            key-positions = <20 21>;
            bindings = <&kp DEL>;
            require-prior-idle-ms = <IDLE_MS>;
            slow-release;
        };

        cbspc { // o + p -> bspc
            timeout-ms = <50>;
            key-positions = <21 22>;
            bindings = <&kp BSPC>;
            require-prior-idle-ms = <IDLE_MS>;
            slow-release;
        };

        capp { // , + . -> application (context menu)
            timeout-ms = <50>;
            key-positions = <46 47>;
            bindings = <&kp K_APP>;
            require-prior-idle-ms = <IDLE_MS>;
            slow-release;
        };
    };
};