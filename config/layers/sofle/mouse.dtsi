// mouse speed
#define ZMK_POINTING_DEFAULT_MOVE_VAL 1500  // 600
#define ZMK_POINTING_DEFAULT_SCRL_VAL 20    // 10

#include <dt-bindings/zmk/pointing.h>

&mmv {
    acceleration-exponent = <1>;      // 1
    time-to-max-speed-ms = <500>;     // 300
    delay-ms = <0>;                   // 0
};

&msc {
    acceleration-exponent = <1>;      // 0
    time-to-max-speed-ms = <40>;      // 300
    delay-ms = <0>;                   // 0
};

/ {
    keymap {
        compatible = "zmk,keymap";
        
        mouse {
            display-name = "mouse";
            bindings = <
&trans         &trans         &trans          &trans         &trans          &trans                                        &trans          &trans          &trans         &trans          &trans            &trans
&trans         &trans         &mkp MB4        &mmv MOVE_UP   &mkp MB5        &trans                                        &trans          &trans          &msc SCRL_UP   &trans          &trans            &trans
&trans         &trans         &mmv MOVE_LEFT  &mmv MOVE_DOWN &mmv MOVE_RIGHT &trans                                        &trans          &msc SCRL_LEFT  &msc SCRL_DOWN &msc SCRL_RIGHT &trans            &trans
&trans         &trans         &trans          &trans         &trans          &trans           &trans         &trans        &trans          &trans          &trans         &trans          &trans            &trans
                              &trans          &trans         &trans          &mkp LCLK        &mkp RCLK      &mkp MCLK     &trans          &trans          &trans         &trans
            >;

            sensor-bindings = <&inc_dec_kp LC(Z) LC(Y) &inc_dec_kp F15 F16>;
        };
    };
};